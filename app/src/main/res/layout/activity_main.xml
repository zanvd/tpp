<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/layout_main"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
	>
	<FrameLayout
		android:id="@+id/layout_camera"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>



	</FrameLayout>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		<HorizontalScrollView
			android:id="@+id/scroll_picture"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			>
			<LinearLayout
				android:id="@+id/layout_picture"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center"
				/>
		</HorizontalScrollView>
		<HorizontalScrollView
			android:id="@+id/scroll_poetry"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			>
			<LinearLayout
				android:id="@+id/layout_poetry"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				/>
		</HorizontalScrollView>
	</FrameLayout>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		>

		<ImageButton
			android:id="@+id/button_poetry"
			android:layout_width="69dp"
			android:layout_height="60dp"
			android:layout_gravity="bottom|start"
			android:background="#00000000"
			app:srcCompat="@drawable/feathericonbutton" />

        <ImageButton
            android:id="@+id/button_map"
            android:layout_width="69dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center"
            android:background="#00000000"
            app:srcCompat="@drawable/mapiconbutton" />

		<ImageButton
			android:id="@+id/button_picture"
			android:layout_width="69dp"
			android:layout_height="60dp"
			android:layout_gravity="bottom|end"
			android:background="#00000000"
			app:srcCompat="@drawable/picturesiconbutton" />


	</FrameLayout>
</RelativeLayout>
